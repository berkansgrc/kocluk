rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin or teacher role
    function isAdminOrTeacher() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'teacher'];
    }

    // Students collection rules
    // Admin/Teacher can read/write any student document.
    // Students can only read/update their OWN document.
    match /students/{studentId} {
      allow read, update: if request.auth != null && (request.auth.uid == studentId || isAdminOrTeacher());
      allow create, delete: if request.auth != null && isAdminOrTeacher();
    }
    
    // Users collection rules (for roles)
    // Only admins/teachers can manage user roles.
    match /users/{userId} {
      allow read, write: if request.auth != null && isAdminOrTeacher();
    }

    // Subjects collection rules (library)
    // Any authenticated user can read the library.
    // Only admins/teachers can modify the library.
    match /subjects/{subjectId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdminOrTeacher();
    }
  }
}