rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Contact Submissions: Allow anyone to create, but only admins to read.
    match /contactSubmissions/{submissionId} {
      allow create: if true;
      allow read, list, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users: Users can read their own data, admins can read any.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Students: Students can read/update their own data, admins can do anything.
    match /students/{studentId} {
      allow read, update: if request.auth != null && (request.auth.uid == studentId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow create, delete, list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Subjects: Only admins can read/write.
    match /subjects/{subjectId} {
      allow read, list, create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
