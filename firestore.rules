rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Students can read/write their own document
    match /students/{studentId} {
       allow read, update, write: if request.auth != null && request.auth.uid == studentId;
    }
    
    // Admins can read all student documents
    match /students/{studentId} {
      allow get, list: if isAdmin();
    }
    
    // Admins can read/write users collection
    match /users/{userId} {
      allow read, write: if isAdmin();
    }
    
    // Authenticated users can read their own user document
    match /users/{userId} {
      allow get: if request.auth != null && request.auth.uid == userId;
    }

    // Admins can read and write all subjects
    match /subjects/{subjectId} {
      allow read, write: if isAdmin();
    }

    // Public write for contact form, admin read for the panel
    match /contactSubmissions/{submissionId} {
      allow create: if true;
      allow read: if isAdmin();
      allow update, delete: if false;
    }
  }
}