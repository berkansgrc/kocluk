rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuth() {
      return request.auth != null;
    }

    function isAdmin() {
      // Admin user is identified by their specific email.
      return isAuth() && request.auth.token.email == 'berkan_1225@hotmail.com';
    }

    function isOwner(uid) {
      // Check if the requesting user is the owner of the document.
      return isAuth() && request.auth.uid == uid;
    }

    // --- Collections Rules ---

    // Students Collection
    // Students can read and update their own data.
    // Admins can read and write any student's data.
    match /students/{studentId} {
      allow read: if isAdmin() || isOwner(studentId);
      allow update: if isAdmin() || isOwner(studentId);
      // Only admins can create or delete student documents.
      allow create, delete: if isAdmin();
    }

    // Subjects Collection
    // Any authenticated user can read the subjects list for populating forms.
    // Only admins can modify the course library.
    match /subjects/{subjectId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
  }
}