
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to make rules more readable.
    function isAuth() {
      return request.auth != null;
    }
    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Students can read/write their own data. Admins can read anyone's data.
    match /students/{studentId} {
      allow read, write: if isOwner(studentId) || isAdmin();
    }
    
    // Users can read their own user object. Admins can read anyone's.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      // Only admins can create or update user roles.
      allow create, update: if isAdmin();
    }
    
    // Subjects can be read by any authenticated user, but only written by admins.
    match /subjects/{subjectId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
  }
}
