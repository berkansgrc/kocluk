rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function isAdmin() {
      // In a real app, this should check for a custom claim:
      // return request.auth.token.admin == true;
      return isAuth() && request.auth.token.email == 'berkan_1225@hotmail.com';
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // Students can only read and update their own data.
    // Admins can read and write any student data.
    match /students/{studentId} {
      allow read, update: if isOwner(studentId) || isAdmin();
      allow create, delete: if isAdmin();
    }

    // Subjects can be read by any authenticated user, but only written by admins.
    // This allows students to see the list of subjects/topics for logging sessions.
    match /subjects/{subjectId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
  }
}
