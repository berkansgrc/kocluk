rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to read the list of subjects
    match /subjects/{subjectId} {
      allow read: if request.auth != null;
    }

    // Allow students to manage their own data
    match /students/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }
    
    // Allow admins to read any student data
    match /students/{studentId} {
      allow get: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow users to be created and admins to read any user document
     match /users/{userId} {
      allow create: if request.auth.uid != null;
      allow get: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
