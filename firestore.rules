
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // PUBLIC ACCESS
    // Anyone can create a contact submission.
    // Only admins can read them. No one can update or delete them.
    match /contactSubmissions/{docId} {
      allow create: if true;
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow update, delete: if false;
    }
    
    // AUTHENTICATED ACCESS
    // Any authenticated user can read subjects.
    // Only admins can write to subjects.
    match /subjects/{subjectId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // USER-SPECIFIC and ADMIN ACCESS
    // Users can only access their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Students can read/write their own data.
    // Admins can read any student's data.
    match /students/{studentId} {
       allow read: if request.auth != null && (request.auth.uid == studentId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
       allow write: if request.auth != null && request.auth.uid == studentId;
    }

  }
}
